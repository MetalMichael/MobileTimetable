<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="display_picture"
        android:title="@string/pref_title_display_picture"
        android:dialogTitle="Choose an image source"
        android:defaultValue=""
        android:entries="@array/display_picture_options"
        android:entryValues="@array/display_picture_option_values"
        android:selectAllOnFocus="true"
        />
    <EditTextPreference
        android:key="change_password"
        android:title="@string/pref_title_change_password"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="notification_time"
        android:title="@string/pref_title_notification_time"
        android:defaultValue="15"
        android:entries="@array/pref_list_notification_times"
        android:entryValues="@array/pref_list_notification_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <mad.mobiletimetable.LogoutBox
        android:key="logout"
        android:title="Logout"
        android:dialogMessage="Are you sure?"

        />
</PreferenceScreen>
