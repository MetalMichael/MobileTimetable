<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Preferences for authorised users only -->

    <EditTextPreference
        android:key="change_password"
        android:title="@string/pref_title_change_password"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="display_picture"
        android:title="@string/pref_title_display_picture"
        android:dialogTitle="Choose an image source"
        android:defaultValue=""
        android:entries="@array/display_picture_options"
        android:entryValues="@array/display_picture_option_values"
        android:selectAllOnFocus="true"
        />

    <mad.mobiletimetable.LogoutBox
        android:key="logout"
        android:title="Logout"
        android:dialogMessage="Are you sure?" />
</PreferenceScreen>