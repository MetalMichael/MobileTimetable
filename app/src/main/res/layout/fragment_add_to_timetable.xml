<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="mad.mobiletimetable.FragmentAddToTimetable"
    android:background="#ba0d0d0f"
    >


<TableRow android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#24737373"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:gravity="fill">
    <TableLayout
        android:layout_marginRight="120px">

        <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="Module"
            android:id="@+id/button"
            android:maxWidth="111dp"
            android:width="300px"


            android:textSize="8pt"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:accessibilityLiveRegion="assertive"
            android:enabled="true" />
    </TableLayout>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeModule"
        android:hint="Module Name"
        android:gravity="center|center_horizontal|left"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:dropDownSelector="@android:color/background_dark"
        android:inputType="text|textAutoComplete"
        android:singleLine="true"
        android:maxWidth="300px" />
</TableRow>

<TableRow android:layout_height="wrap_content"
    android:layout_width="120px"
    android:background="#ff737373"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="fill">

    <TableLayout android:layout_marginRight="100px">

        <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="Type"
            android:id="@+id/TypeChoice"
            android:textAlignment="inherit"
            android:maxWidth="111dp"
            android:textSize="8pt"
            android:gravity="center_vertical|center_horizontal|fill_vertical"
            android:layout_gravity="center"
            android:background="#ff737373"
            android:accessibilityLiveRegion="assertive"
            />
    </TableLayout>

    <Spinner
        android:layout_width="200px"
        android:layout_height="100px"
        android:id="@+id/completeType"
        android:layout_column="1"
        android:enabled="true"
        android:width="500px"
        android:layout_gravity="center"

        android:hint="Lecture/Tutorial"
        android:textColor="#000000"
        android:singleLine="true"
        android:textColorLink="#000000"
        android:autoText="true"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal|left"
        android:textAlignment="inherit" />

</TableRow>
<TableRow android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#24737373"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:gravity="fill">
    <TableLayout android:layout_marginRight="100px">

        <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="Where"
            android:id="@+id/WhereSel"
            android:textAlignment="inherit"
            android:maxWidth="111dp"
            android:width="300px"
            android:textSize="8pt"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:accessibilityLiveRegion="assertive"
            android:enabled="true" />
    </TableLayout>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeRoom"
        android:hint="Room ID"
        android:gravity="center_vertical|center_horizontal|left"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:dropDownSelector="@android:color/background_dark"
        android:inputType="textAutoComplete"
        android:maxWidth="300px" />


</TableRow>
<TableRow android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#ff737373"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="fill">
    <TableLayout
        android:layout_marginRight="120px">

        <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="When"
            android:id="@+id/button4"
            android:maxWidth="111dp"
            android:width="300px"
            android:textSize="8pt"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:accessibilityLiveRegion="assertive"
            android:background="#ff737373" />
    </TableLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WhenSelection"
        android:layout_column="1"
        android:width="500px"
        android:layout_gravity="center"
        android:longClickable="false"
        android:hint="Date/Time"
        android:inputType="text"
        android:gravity="center_vertical|center_horizontal|left"
        android:textSize="20dp"
        android:maxWidth="300px" />

</TableRow>

<TableRow
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

</TableRow>

<Button
    android:layout_width="288dp"
    android:layout_height="wrap_content"
    android:text="ADD"

    android:id="@+id/Add"
    android:layout_column="0"

    android:onClick="onAddClicked"

    android:textColor="#ffffff"
    android:textSize="30dip"
    android:clickable="true"
    android:typeface="sans"
    android:shadowColor="@android:color/white"
    android:singleLine="false"
    android:layout_marginTop="200dp"
    android:enabled="true" />

</TableLayout>





