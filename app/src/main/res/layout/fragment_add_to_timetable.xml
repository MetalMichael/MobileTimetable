<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="mad.mobiletimetable.FragmentAddToTimetable"
    android:background="#ba0d0d0f"
    >


<TableRow android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#ff737373"
    android:layout_gravity="center"
    android:layout_margin="5dp"

    android:gravity="center|center_vertical|center_horizontal"
    >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Module"
            android:id="@+id/button"
            android:textSize="12pt"
            android:layout_gravity="center"
            android:accessibilityLiveRegion="assertive"
            android:enabled="true"
            android:background="#ff737373" />

    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#24737373"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center|center_vertical|center_horizontal">

    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/completeModule"
        android:hint="Module Name"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:dropDownSelector="@android:color/background_dark"
        android:inputType="text|textAutoComplete"
        android:singleLine="true"
        android:gravity="center"
        android:width="400dp" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#ff737373"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center|center_vertical|center_horizontal">



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:id="@+id/TypeChoice"
            android:textAlignment="inherit"

            android:textSize="12pt"
            android:gravity="center_vertical|center_horizontal|fill_vertical"
            android:layout_gravity="center"
            android:background="#ff737373"
            android:accessibilityLiveRegion="assertive"
            />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#24737373"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center|center_vertical|center_horizontal">
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:id="@+id/completeType"

        android:enabled="true"
        android:width="500px"
        android:layout_gravity="center"

        android:hint="Lecture/Tutorial"
        android:textColor="#000000"
        android:singleLine="true"
        android:textColorLink="#000000"
        android:autoText="true"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:gravity="center|center_vertical|center_horizontal|left"
        android:textAlignment="inherit" />

    </TableRow>
    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#ff737373"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center|center_vertical|center_horizontal">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where"
            android:id="@+id/WhereSel"
            android:textAlignment="inherit"

            android:width="400dp"
            android:textSize="12pt"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:accessibilityLiveRegion="assertive"
            android:enabled="true"
            android:background="#ff737373" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#24737373"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center|center_vertical|center_horizontal">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/completeRoom"
            android:hint="Room ID"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:dropDownSelector="@android:color/background_dark"
            android:inputType="textAutoComplete"
            android:gravity="center"
            android:width="400dp" />


     </TableRow>
<TableRow android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#ff737373"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="center|center_vertical|center_horizontal"
    android:focusableInTouchMode="false">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When"
            android:id="@+id/button4"

            android:width="400dp"
            android:textSize="12pt"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:accessibilityLiveRegion="assertive"
            android:background="#ff737373" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#24737373"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center|center_vertical|center_horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/WhenSelection"

            android:width="400dp"
            android:layout_gravity="center"
            android:longClickable="false"
            android:hint="Date/Time"
            android:inputType="text"
            android:gravity="center"
            android:textSize="20dp"
             />

    </TableRow>


    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#24737373"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center|center_vertical|center_horizontal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"

        android:id="@+id/Add"
        android:onClick="onAddClicked"

        android:textColor="#000000"
        android:textSize="30dip"
        android:clickable="true"
        android:typeface="sans"
        android:shadowColor="@android:color/white"
        android:singleLine="false"
        android:enabled="true"
        android:gravity="center" />
  </TableRow>
</TableLayout>





